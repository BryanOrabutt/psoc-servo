include "m8c.inc"


;--------------------------------------------------
; Constants for Motor2 API's.
;--------------------------------------------------

Motor2_CONTROL_REG_START_BIT:              equ 0x01    ; Control register start bit
Motor2_INT_REG:                            equ 0x0e1
Motor2_INT_MASK:                           equ 0x08


;--------------------------------------------------
; Constants for Motor2 user defined values
;--------------------------------------------------

Motor2_PERIOD:                             equ 0x4e1f
Motor2_PULSE_WIDTH:                        equ 0x5db


;--------------------------------------------------
; Register Address Constants for Motor2
;--------------------------------------------------

Motor2_COUNTER_LSB_REG:                equ 0x28   ; DR0 Count register
Motor2_COUNTER_MSB_REG:                equ 0x2c
Motor2_PERIOD_LSB_REG:                 equ 0x29   ; DR1 Period register
Motor2_PERIOD_MSB_REG:                 equ 0x2d
Motor2_COMPARE_LSB_REG:                equ 0x2a   ; DR2 Compare register
Motor2_COMPARE_MSB_REG:                equ 0x2e
Motor2_CONTROL_LSB_REG:                equ 0x2b   ; Control register
Motor2_CONTROL_MSB_REG:                equ 0x2f
Motor2_FUNC_LSB_REG:                   equ 0x28   ; Function register
Motor2_FUNC_MSB_REG:                   equ 0x2c
Motor2_INPUT_LSB_REG:                  equ 0x29   ; Input register
Motor2_INPUT_MSB_REG:                  equ 0x2d
Motor2_OUTPUT_LSB_REG:                 equ 0x2a   ; Output register
Motor2_OUTPUT_MSB_REG:                 equ 0x2e


;--------------------------------------------------
; Motor2 Macro 'Functions'
;--------------------------------------------------

   macro Motor2_Start_M
   or    reg[Motor2_CONTROL_LSB_REG],  Motor2_CONTROL_REG_START_BIT
   endm

   macro Motor2_Stop_M
   and   reg[Motor2_CONTROL_LSB_REG], ~Motor2_CONTROL_REG_START_BIT
   endm

   macro Motor2_EnableInt_M
   M8C_EnableIntMask Motor2_INT_REG, Motor2_INT_MASK
   endm

   macro Motor2_DisableInt_M
   M8C_DisableIntMask Motor2_INT_REG, Motor2_INT_MASK
   endm



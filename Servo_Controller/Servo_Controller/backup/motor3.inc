include "m8c.inc"


;--------------------------------------------------
; Constants for Motor3 API's.
;--------------------------------------------------

Motor3_CONTROL_REG_START_BIT:              equ 0x01    ; Control register start bit
Motor3_INT_REG:                            equ 0x0e1
Motor3_INT_MASK:                           equ 0x20


;--------------------------------------------------
; Constants for Motor3 user defined values
;--------------------------------------------------

Motor3_PERIOD:                             equ 0x4e1f
Motor3_PULSE_WIDTH:                        equ 0x7cf


;--------------------------------------------------
; Register Address Constants for Motor3
;--------------------------------------------------

Motor3_COUNTER_LSB_REG:                equ 0x30   ; DR0 Count register
Motor3_COUNTER_MSB_REG:                equ 0x34
Motor3_PERIOD_LSB_REG:                 equ 0x31   ; DR1 Period register
Motor3_PERIOD_MSB_REG:                 equ 0x35
Motor3_COMPARE_LSB_REG:                equ 0x32   ; DR2 Compare register
Motor3_COMPARE_MSB_REG:                equ 0x36
Motor3_CONTROL_LSB_REG:                equ 0x33   ; Control register
Motor3_CONTROL_MSB_REG:                equ 0x37
Motor3_FUNC_LSB_REG:                   equ 0x30   ; Function register
Motor3_FUNC_MSB_REG:                   equ 0x34
Motor3_INPUT_LSB_REG:                  equ 0x31   ; Input register
Motor3_INPUT_MSB_REG:                  equ 0x35
Motor3_OUTPUT_LSB_REG:                 equ 0x32   ; Output register
Motor3_OUTPUT_MSB_REG:                 equ 0x36


;--------------------------------------------------
; Motor3 Macro 'Functions'
;--------------------------------------------------

   macro Motor3_Start_M
   or    reg[Motor3_CONTROL_LSB_REG],  Motor3_CONTROL_REG_START_BIT
   endm

   macro Motor3_Stop_M
   and   reg[Motor3_CONTROL_LSB_REG], ~Motor3_CONTROL_REG_START_BIT
   endm

   macro Motor3_EnableInt_M
   M8C_EnableIntMask Motor3_INT_REG, Motor3_INT_MASK
   endm

   macro Motor3_DisableInt_M
   M8C_DisableIntMask Motor3_INT_REG, Motor3_INT_MASK
   endm


